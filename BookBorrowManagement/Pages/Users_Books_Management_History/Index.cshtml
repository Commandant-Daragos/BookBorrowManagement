@page
@model BookBorrowManagement.Pages.Users_Books_Management_History.IndexModel

@{
    ViewData["Title"] = "History of Book Borrownents";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User_Book_Management_History[0].User.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Book_Management_History[0].Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Book_Management_History[0].BorrowDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Book_Management_History[0].ReturnDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.User_Book_Management_History) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.User.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReturnDate)
            </td>
        </tr>
}
    </tbody>
</table>
